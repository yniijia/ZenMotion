{
  "name": "ZenMotion",
  "version": "2.05.25",
  "description": "Elegant screen activity simulator with minimalist design",
  "permissions": [
    "scripting",
    "storage",
    "alarms",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/js/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "19": "src/icons/icon19.png",
      "32": "src/icons/icon32.png",
      "38": "src/icons/icon38.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon16.png",
    "32": "src/icons/icon32.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "manifest_version": 3
}